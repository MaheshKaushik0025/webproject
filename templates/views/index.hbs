<!DOCTYPE html>
<html lang="en">
 {{>header}}
  <body>
    {{>navbar}}
   
    <!-- main header -->
    <div class="container - fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row">
                <!-- left side div -->
                <div class="col-md-6 col-12 main-header_left">
                    <p>Welcome to weather app</p>
                    <h1>
                        Get the Latest <span>Weather</span> Info of you city
                    </h1>
                    <a href="/weather"><button>check now</button></a>
                </div>
                <!-- right side div -->
                <div class="col-md-6 col-12 main-header_right">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" src="image/TCP 1.jpg" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="image/GIS1.jpg" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="image/GIS2.png" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                </div>

            </div>
        </div>

      </div>
      
    </div>
 
  </body>
</html>
